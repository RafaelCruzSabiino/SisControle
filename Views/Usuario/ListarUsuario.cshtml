@model List<SisManagement.Models.Usuario>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Nome:</td>
                <td>E-mail:</td>
                <td>Senha:</td>
                <td>Permissão:</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.Nome </td>
                    <td> @item.Email </td>
                    <td> @item.Senha </td>
                    <td> @item.Permissao </td>
                    <td> <button onclick="AlterarUsuario(@item.Id)">Alterar</button> </td>
                </tr>
            }
        </tbody>
    </table>
</div>
